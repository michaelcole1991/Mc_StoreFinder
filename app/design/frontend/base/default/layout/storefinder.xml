<?xml version="1.0"?>   
<layout version="0.1.0">   

	<storefinder_index_index>   
	    <reference name="root">   
	     	<action method="setTemplate"><template>page/1column.phtml</template></action>   
	    </reference> 
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>storefinder/css/storefinder.css</name>
			</action>
		</reference>
		<reference name="content">   
			<block type="storefinder/index" name="storefinder_index" template="storefinder/index.phtml"/>   
		</reference>   
	</storefinder_index_index> 

	<storefinder_index_view>   
	    <reference name="root">   
	     	<action method="setTemplate"><template>page/1column.phtml</template></action>   
	    </reference>   
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>storefinder/css/storefinder.css</name>
			</action>
		</reference>
		<reference name="content">   
			<block type="storefinder/view" name="storefinder_view" template="storefinder/view.phtml"/>   
		</reference>   
	</storefinder_index_view> 

</layout>   
	