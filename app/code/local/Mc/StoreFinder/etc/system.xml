<?xml version="1.0"?>
<config>
    <tabs>
        <storefinder translate="label" module="storefinder">
            <label>Store</label>
            <sort_order>1000000</sort_order>
        </storefinder>
    </tabs>
    <sections>
        <storefinder translate="label" module="storefinder">                    
            <label>Store Finder</label>
            <tab>storefinder</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>            
            <groups>
                <general translate="label"> 
                    <label>Store Finder General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <api_key translate="label comment">
                            <label>Google Maps Api Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Please obtain your Google Maps Api V3 key from <a href="https://code.google.com/apis/console/">here</a> and paste into this field.]]></comment>
                        </api_key>
                    </fields>
                </general>

                <defaults>
                    <label>Map Defaults</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

                        <latitude translate="label">
                            <label>Default Latitude</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </latitude>

                        <longitude translate="label">
                            <label>Default Longitude</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </longitude>  

                        <map_type translate="label comment">
                            <label>Map Type</label>
                            <comment><![CDATA[Default style of the map when loaded.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>storefinder/system_maptypes</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </map_type>

                        <map_zoom translate="label comment">
                            <label>Map Zoom Level</label>
                            <frontend_type>select</frontend_type>
                            <source_model>storefinder/system_zoom</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </map_zoom>

                    </fields>
                </defaults>

            </groups>
        </storefinder>
    </sections>
</config>
